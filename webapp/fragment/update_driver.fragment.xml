<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
	<VBox class="sapUiSmallMargin">
		<f:SimpleForm editable="true" layout="ResponsiveGridLayout" title="Create Driver" labelSpanXL="3" labelSpanL="3" labelSpanM="3"
			labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1"
			singleContainerFullSize="false">
			<f:toolbar>
				<Toolbar id="cd2">
					<Title id="Title4" text="Create Vehicle"/>
					<ToolbarSpacer />
					<Button text="Update" type="Emphasized" class="bold"/>
					
				</Toolbar>
			</f:toolbar>
			<f:content>
				<Label text="Driver Name"/>
				<Input id="driverName1" value="{driverName}"/>
				<Label text="Date of Birth"/>
				<Input value="{dateOfBirth}"/>
				<Label text="Gender"/>
				<RadioButtonGroup id="gender10" columns="2" width="100%" class="sapUiMediumMarginBottom">
					<RadioButton id="gender11" text="Male"/>
					<RadioButton id="gender12" text="Female"/>
				</RadioButtonGroup>
				<Label text="Driver Mobile"/>
				<Input id="driverMobile1" value="{driverMobile}"/>
				<Label text="Driver License Number"/>
				<Input id="driverLicenseNumber1" value="{driverLicenseNumber}"/>
				<Label text="Driver License Expiry Date"/>
				<DatePicker id="driverLicenseExpiryDate1" value="2014-03-26" valueFormat="yyyy-MM-dd" displayFormat="long" change="handledriverLicenseExpiryDateChange1" class="sapUiSmallMarginBottom"/>
				<Label text="Active"/>
				<RadioButtonGroup id="active10" columns="2" width="100%" class="sapUiMediumMarginBottom">
					<RadioButton id="active11" text="Yes"/>
					<RadioButton id="active12" text="No"/>
				</RadioButtonGroup>
			</f:content>
		</f:SimpleForm>
	</VBox>
</core:FragmentDefinition>